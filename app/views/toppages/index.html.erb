<% if logged_in? %>
  <h1>料理リスト一覧</h1>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @cookinglist) do |f| %>
       <%= render 'layouts/error_messages', model: f.object %>
       
        <div class="mb-3">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'cookinglists/cookinglists', cookinglists: @cookinglists %>
    </div>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Cookinglists!</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>